{% if pages > 1 %}
    <nav>
        <ul id="pagination" class="pagination justify-content-center ws-pagination ">

            {% if currentPage >1 %}
                <li class="page-item">
                    <a href="{{ path('app_category', {'id': category.id, 'page': currentPage - 1}) }}"
                       class="page-link"> &lt;</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link"> &lt;</a>
                </li>
            {% endif %}

            {% for page in 1..pages %}
                <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                    <a href="{{ path('app_category', {'id': category.id, 'page': page}) }}"
                       class="page-link"> {{ page }}</a>
                </li>
            {% endfor %}

            {% if currentPage < pages %}
            <li class="page-item">
                <a href="{{ path('app_category', {'id': category.id, 'page': currentPage + 1}) }}"
                   class="page-link"> &gt;</a>
            </li>
            {% else %}
            <li class="page-item disabled">
                <a class="page-link"> &gt;</a>
                {% endif %}
            </li>

        </ul>
    </nav>
    <script>
    var paginationElement = document.getElementById('pagination');

    var url = window.location.href;
    var urlSplit = url.split('/');
    var isPage = urlSplit.findIndex(element => element.includes('page'));


    if(isPage > 0){
         console.log(isPage);
        // Faire défiler l'élément de pagination au milieu de la fenêtre
        paginationElement.scrollIntoView({
            behavior: 'smooth',
            block: 'center',
            inline: 'center'
        });
    }
    </script>

{% endif %}


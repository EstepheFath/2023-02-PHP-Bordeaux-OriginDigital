{% extends 'base.html.twig' %}
{% block stylesheets%}{{ encore_entry_link_tags('app') }}{% endblock %}
{% block title %}Profile{% endblock %}

{% block body %}

    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1 class="ws-profil-title">Mon profile</h1>

    <div class="ws-profil-information">
    <h2 class="ws-profil-title">Mon abonnement</h2>

        {% if app.user %}
    <div class="ws-profil-form">
    {#  {{ form_start(form) }}#}
        <div class="">
             <a href="{{ path('app_subscription') }}" class="btn ws-yellow-btn">GÃ©rer mon abonnement</a>
        </div>
    </div>
            {% else %}
                <a href="{{ path('app_subscription') }}" class="">Pourquoi s'abonner</a>
    {% endif %}
          {% if is_granted('ROLE_USER') %}
        <h2 class="ws-profil-title">Mon compte</h2>
        <div class="ws-profil-form">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>

        <div class="ws-profil-form">
            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button class="btn">Delete</button>
            </form>
        </div>
        {{ form_end(form) }}
     {% endif %}
    </div>
{% endblock %}
